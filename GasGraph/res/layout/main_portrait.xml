<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.thinkseedo.gasgraph"
	android:id="@+id/rootPortrait"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<LinearLayout 
		android:id="@+id/header_layout"
		android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
		android:gravity="center_horizontal" 
		android:orientation="vertical" >

		<taptwo.widget.TitleFlowIndicator
		    android:id="@+id/viewflowindic"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_gravity="bottom"
		    android:gravity="bottom"
		    android:layout_marginTop="10dp"
		    android:textStyle="bold"
		    android:textSize="24dp"
		    
		    app:textSize="14dp"
		    app:selectedSize="20dp"
		    app:titlePadding="40dp"
		    app:clipPadding="0dp"
		    app:footerColor="#FF11AADD"
		    app:footerLineHeight="2dp"
		    app:footerTriangleHeight="10dp"
		    app:selectedBold="true"
		    app:selectedColor="#FF11AADD"
		    app:textColor="#FFFFFFFF" >

		</taptwo.widget.TitleFlowIndicator>
		
		<!-- app:customTypeface="fonts/Antic.ttf" -->
		<!--  FFC445  -->
	</LinearLayout>
	<taptwo.widget.ViewFlow
		android:id="@+id/viewflow"
		android:duplicateParentState="true" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		app:sidebuffer="5">
	</taptwo.widget.ViewFlow>
</LinearLayout> 
