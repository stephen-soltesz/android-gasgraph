<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HelloGallery">
        <attr name="android:galleryItemBackground" />
    </declare-styleable>
    
    <declare-styleable name="CustomGallery">
    		<attr name="gravity" format="integer" />
    		<attr name="animationDuration" format="integer" />
    		<attr name="unselectedAlpha" format="float" />
    		<attr name="spacing" format="dimension" />
    </declare-styleable>
    <attr name="customGalleryStyle" format="reference" />
    	
    <declare-styleable name="CustomAbsSpinner">
    		<attr name="entries" format="reference" />
    </declare-styleable>
    <attr name="customAbsSpinnerStyle" format="reference" />
    
    <declare-styleable name="RowWidget">
        <attr name="decimalPlaces" format="integer"/>
	    <attr name="valueType">
	        <enum name="toggle" value="1" />
	        <enum name="button" value="2" />
	        <enum name="spinner" value="3" />
	        <enum name="number" value="4" />
	        <enum name="wheel" value="5" />
	    </attr>
        <attr name="wheelPadding" format="dimension" />
        <attr name="wheelFraction" format="boolean" />
        <attr name="numberPrice" format="boolean"/>
        <attr name="valueArray" format="reference"/>
        <attr name="valueText" format="string"/>
        <attr name="valueWidth" format="integer"/>
        <attr name="labelText" format="string"/>
        <attr name="helpName"  format="string"/>
    </declare-styleable>
    
    <declare-styleable name="ViewFlow">
        <attr name="sidebuffer" format="integer" />
    </declare-styleable>
    <declare-styleable name="CircleFlowIndicator">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="radius" format="dimension" />
		<attr name="centered" format="boolean" />
		<attr name="fadeOut" format="integer" />
		<attr name="inactiveType">
			<flag name="stroke" value="0" />
			<flag name="fill" value="1" />
		</attr>
		<attr name="activeType">
			<flag name="stroke" value="0" />
			<flag name="fill" value="1" />
		</attr>
    </declare-styleable>    
    <declare-styleable name="TitleFlowIndicator">
        <attr name="titlePadding" format="dimension" />
        <attr name="clipPadding" format="dimension" />
        <attr name="selectedColor" format="color" />
        <attr name="selectedBold" format="boolean" />
        <attr name="selectedSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="footerLineHeight" format="dimension" />
        <attr name="footerColor" format="color" />
        <attr name="footerTriangleHeight" format="dimension" />
        <attr name="customTypeface" format="string" />
    </declare-styleable> 
    <declare-styleable name="WheelView">
        <attr name="padding" format="dimension" />
        <attr name="textColor2" format="color" />
        <attr name="textSize2" format="dimension" />
    </declare-styleable> 
</resources>