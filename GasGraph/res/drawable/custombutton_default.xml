<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>        
        <shape>
            <stroke
                android:width="5dp"
                android:color="#88FFFFFF" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="5dp"
                android:color="#00FFFFFF" />
